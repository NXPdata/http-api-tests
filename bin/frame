#! /bin/bash

# run a frame test
#
# $1 : test number
test="${1}"

${CURL} -s -X POST -u "${STORE_TOKEN}:" \
  -H "Accept: application/ld+json" \
  -H "Link: <https://raw.githubusercontent.com/json-ld/json-ld.org/master/test-suite/tests/frame-${test}-frame.jsonld>; re\
l=\"http://www.w3.org/ns/json-ld#context\"; type=\"application/ld+json\"" \
  -H "Content-Type: application/sparql-query" \
  --data-binary @- \
  ${STORE_URL}/json-ld/frame-${test}-in/jsonld <<EOF \
  | cat # json_reformat 
construct {?s ?p ?o} where {?s ?p ?o}
EOF

